{
  "compilerOptions": {
    "strict": true
  },
  "lock": false,
  "lint": {
    "files": {
      "include": [
        "js/",
        "ts/",
        "deno/",
        "test/",
        "mod.ts"
      ]
    },
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "eqeqeq",
        "explicit-module-boundary-types",
        "no-throw-literal"
      ],
      "exclude": [
        "ban-unused-ignore"
      ]
    }
  },
  "fmt": {
    "include": [
      "js/",
      "ts/",
      "deno/",
      "test/",
      "mod.ts"
    ],
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "singleQuote": true
  },
  "imports": {
    "@std/async": "jsr:@std/async@^0.224.1",
    "@std/encoding": "jsr:@std/encoding@^0.224.3",
    "@std/fs": "jsr:@std/fs@^0.229.1"
  }
}
