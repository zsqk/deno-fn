{
  "compilerOptions": {
    "strict": true
  },
  "lock": false,
  "lint": {
    "files": {
      "include": [
        "js/",
        "ts/",
        "deno/",
        "test/",
        "mod.ts"
      ]
    },
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "eqeqeq",
        "explicit-module-boundary-types",
        "no-throw-literal"
      ],
      "exclude": [
        "ban-unused-ignore"
      ]
    }
  },
  "fmt": {
    "include": [
      "js/",
      "ts/",
      "deno/",
      "test/",
      "mod.ts"
    ],
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": true
    }
  }
}
